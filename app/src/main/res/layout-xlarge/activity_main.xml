<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_grey"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#D0D0D0D0"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/textView_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/white"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/operation_delete"
        android:textAlignment="viewEnd"
        android:textColor="@color/orange"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="end"
        android:layout_marginBottom="10dp"
        android:background="#575757"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="4"
        android:padding="8dp"
        android:rowCount="5">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dark"
            app:cornerRadius="50dp"
            android:text="@string/operation_clear"
            android:textColor="@color/orange"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_plus_minus"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dark"
            app:cornerRadius="50dp"
            android:text="@string/operation_plus_minus"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_percent"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dark"
            app:cornerRadius="50dp"
            android:text="@string/operation_percent"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_divide"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:text="@string/operation_divide"
            android:textSize="24sp" />

        <!-- Agrega los demÃ¡s botones de la misma manera -->
        <Button
            android:id="@+id/button_seven"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_seven"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_eight"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_eight"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_nine"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_nine"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_multiply"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:text="@string/operation_multiply"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_four"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_four"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_five"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_five"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_six"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_six"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_subtract"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:text="@string/operation_subtract"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_one"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_one"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_two"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_two"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_three"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_three"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_sum"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:text="@string/operation_sum"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_zero"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/number_zero"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_dot"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/grey_dar"
            app:strokeColor="@color/corner"
            app:strokeWidth="2dp"
            android:text="@string/operation_dot"
            android:textSize="24sp"
            app:cornerRadius="50dp"
            />

        <Button
            android:id="@+id/button_equal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            app:cornerRadius="50dp"
            android:layout_columnSpan="2"
            android:text="@string/operation_equal"
            android:textSize="24sp" />

    </GridLayout>

</LinearLayout>
